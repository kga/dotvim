snippet de
    diag explain ${1:value};

snippet dd
    use DDP { show_unicode => 1, use_prototypes => 0, colored => 1 }; p ${1:value}

snippet package
    package ${1:value};
    use strict;
    use warnings;

    1;

snippet packaget
    package t::${1:value};
    use t::test;

    ${2:value}

snippet subtest
    subtest '${1:value}' => sub {
        ${2:value}
    };

snippet tests
    sub ${1:value} : Tests {
        ${2:value}
    }
